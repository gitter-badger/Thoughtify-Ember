<div class="row">
	<div class="col-xs-12">
		<div class="row">

			{{#unless hideNav}}
				<div class="col-xs-3 col-sm-2">
					<div class="row">
						<div class="col-xs-12">
							<button class="btn btn-danger btn-block" {{action "close"}}>{{fa-icon "close"}}</button>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<button class="btn btn-default btn-block" {{action "rightArr"}}> {{fa-icon "angle-double-right"}} </button>
						</div>
					</div>
				</div>
			{{/unless}}
			
			{{#if hideNav}}
				<div class="idea col-xs-12">
			{{else}}
				<div class="idea col-xs-9 col-sm-10">
			{{/if}}
				<span class="h3"> {{idea.title}} </span>
				<p>{{idea.body}}</p>
			</div>
		</div>
	</div>
</div>