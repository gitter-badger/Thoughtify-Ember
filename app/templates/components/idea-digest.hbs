<div class="idea-digest">
	<div class="row">
		<div class="col-xs-12">
			<div class="row">
				<div class="col-xs-1">
					<div class="vote-arrows">
						<div class="row">
							<div class="col-xs-12">
								<button class="btn arrow">
									{{fa-icon 'arrow-up'}}
								</button>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12">
								<button class="btn arrow">
									{{fa-icon 'arrow-down'}}
								</button>
							</div>
						</div>
					</div>
				</div>
				<div class="col-xs-11">
					<div class="idea col-xs-9 col-sm-10">
						<span class="h3"> {{idea.title}} </span>
						<p>{{idea.body}}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>