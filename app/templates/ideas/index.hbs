<div class="row">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-11">
				<div>
					<h1 style="text-align:center;">Bring your ideas to life</h1>
				</div>
			</div>
			<div class="col-xs-1">
				<a href="#" style="margin: 15px 0;" class="btn btn-success" data-toggle="modal" data-target="#ideaSubmissionModal">{{fa-icon "plus"}}</a>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-12">
				<ul id="ideas" class="list-unstyled">
					{{#each idea in model}}
						<div class="row">
							<div class="col-xs-12">
								<li>
									<div class="row">
										<div class="col-xs-3 col-sm-2">
											<div class="row">
												<div class="col-xs-12">
													<button class="killIdea btn btn-danger" {{action "destroyIdea" idea}}>{{fa-icon "close"}}</button>
												</div>
											</div>
											<div class="row">
												<div class="col-xs-12">
													<button class="visitIdea btn btn-default" {{action "visitIdea" idea}}> {{fa-icon "angle-double-right"}} </button>
												</div>
											</div>
										</div>
										
										<div class="idea col-xs-9 col-sm-10">
											<span class="h3"> {{idea.title}} </span>
											<p>{{idea.body}}</p>
										</div>
									</div>
								</li>
							</div>
						</div>
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>