<div class="row">
	<div class="col-xs-12">
		<h2 style="text-align:center;"> 
			{{#link-to "ideas.idea" this }}
				{{this.title}}
			{{/link-to}}
		</h2>
	</div>
</div>
<div class="row">
	<div class="col-xs-4">
		<img class="ideaImage" {{bind-attr src=this.url}} />
	</div>
	<div class="col-xs-8">
		<p>{{this.body}} </p>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<div class="row">
			<div class="col-xs-12">
				<h1>Comments Section</h1>
			</div>
		</div>
		
		{{#each comment in model.comments}}
			<div class="row">
				<div class="col-xs-12">
					<blockquote>
						{{comment.body}}
						<footer>
							Author:
							<cite>
								{{comment.author}}
							</cite>
						</footer>
					</blockquote>
				</div>
			</div>
		{{/each}}
	</div>
</div>

